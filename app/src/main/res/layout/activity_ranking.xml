<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.javad.quizapplang.Ranking"
    android:orientation="vertical">

    <com.javad.quizapplang.CustomView.NumTextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimary"
        android:text="رتبه بندی"
        android:gravity="center"
        android:textColor="@color/colorWhite"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/coin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="سکه"
            android:src="@drawable/coin"
            android:tint="#FACB1B"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/textColor"
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="امتیاز"
            android:src="@drawable/ic_if__p_1156670"
            android:padding="@dimen/_8sdp"
            android:layout_weight="1"
            android:textColor="@color/textColor"
            android:gravity="center"/>

        <com.javad.quizapplang.CustomView.NumTextView
            android:id="@+id/key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="عضویت"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp" />

        <com.javad.quizapplang.CustomView.NumTextView
            android:id="@+id/part"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ب/د"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/textColor"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <com.javad.quizapplang.CustomView.NumTextView
                android:id="@+id/user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="کاربر"
                android:layout_weight="1"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/textColor"
                android:gravity="center"
                tools:ignore="NestedWeights" />

        </LinearLayout>

        <com.javad.quizapplang.CustomView.NumTextView
            android:id="@+id/level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="رتبه"
            android:layout_weight="1"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/textColor"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/textGrid"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=".\n.\n."
        android:gravity="center"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"/>

    <LinearLayout
        android:id="@+id/ll_self"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">

        <com.javad.quizapplang.CustomView.NumTextView
            android:id="@+id/coin_self"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="سکه"
            android:textColor="@color/textColor"
            android:layout_weight="1"
            android:gravity="center"/>

        <com.javad.quizapplang.CustomView.NumTextView
            android:id="@+id/key_self"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="کلید"
            android:textColor="@color/textColor"
            android:layout_weight="1"
            android:gravity="center"/>

        <com.javad.quizapplang.CustomView.NumTextView
            android:id="@+id/score_self"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="امتیاز"
            android:layout_weight="1"
            android:textColor="@color/textColor"
            android:gravity="center"/>

        <com.javad.quizapplang.CustomView.NumTextView
            android:id="@+id/part_self"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="د/ب"
            android:layout_weight="1"
            android:textColor="@color/textColor"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <com.javad.quizapplang.CustomView.NumTextView
                android:id="@+id/user_self"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="کاربر"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_5sdp"
                android:textColor="@color/textColor"
                android:gravity="right|center"
                tools:ignore="NestedWeights" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_pic_self"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/_3sdp"
                android:src="@color/bgColor"
                android:layout_weight="0.5"/>

        </LinearLayout>

        <com.javad.quizapplang.CustomView.NumTextView
            android:id="@+id/level_self"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="رتبه"
            android:layout_weight="1"
            android:textColor="@color/textColor"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
