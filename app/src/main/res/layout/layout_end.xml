<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.javad.quizapplang.CustomView.NumTextViewBold
        android:id="@+id/title_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بخش بعدی برای شما فعال شد"
        android:textSize="@dimen/_15sdp"
        android:layout_weight="1.5"
        android:layout_marginTop="@dimen/_20sdp"/>

    <com.javad.quizapplang.CustomView.NumTextViewBold
        android:id="@+id/score_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="امتیاز شما: "
        android:layout_weight="1"
        android:textColor="@color/border_circles"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_17sdp"/>

    <FrameLayout
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_weight="1"
        android:layout_marginBottom="-10dp">

        <com.emredavarci.circleprogressbar.CircleProgressBar
            android:id="@+id/progress_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundWidth="7"
            app:backgroundColor="#ffc498"
            app:progressColor="#ff8a30"
            app:prefix=""
            app:textSize="0dp"
            app:progressTextColor="@color/border_circles"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txt_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="95"
            android:textColor="#ff8a30"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_13sdp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp">

            <FrameLayout
                android:id="@+id/sec1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/bg_circles_gray"
                    app:civ_border_width="@dimen/_3sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:civ_border_color="@color/border_circles_gray" />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textColor="@color/border_circles_gray"
                    android:textSize="@dimen/_15sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/tik1"
                    android:visibility="gone"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/colorGreen"
                    android:layout_gravity="right"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/sec2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/bg_circles_gray"
                    app:civ_border_width="@dimen/_3sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:civ_border_color="@color/border_circles_gray" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/border_circles_gray"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/tik2"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/colorGreen"
                    android:visibility="gone"
                    android:layout_gravity="right"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/sec3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/bg_circles_gray"
                    app:civ_border_width="@dimen/_3sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:civ_border_color="@color/border_circles_gray" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/border_circles_gray"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/tik3"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/colorGreen"
                    android:visibility="gone"
                    android:layout_gravity="right"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/sec4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/bg_circles_gray"
                    android:layout_margin="@dimen/_5sdp"
                    app:civ_border_width="@dimen/_3sdp"
                    app:civ_border_color="@color/border_circles_gray" />

                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/border_circles_gray"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/tik4"
                    android:visibility="gone"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/colorGreen"
                    android:layout_gravity="right"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/sec5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/bg_circles_gray"
                    app:civ_border_width="@dimen/_3sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:civ_border_color="@color/border_circles_gray" />

                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/border_circles_gray"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/tik5"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/colorGreen"
                    android:visibility="gone"
                    android:layout_gravity="right"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/sec6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/bg_circles_gray"
                    app:civ_border_width="@dimen/_3sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:civ_border_color="@color/border_circles_gray" />

                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/border_circles_gray"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/tik6"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/colorGreen"
                    android:visibility="gone"
                    android:layout_gravity="right"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/sec7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/bg_circles_gray"
                    app:civ_border_width="@dimen/_3sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:civ_border_color="@color/border_circles_gray" />

                <TextView
                    android:id="@+id/txt7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/border_circles_gray"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/tik7"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/colorGreen"
                    android:visibility="gone"
                    android:layout_gravity="right"/>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_5sdp">

        <com.javad.quizapplang.CustomView.NumTextViewBold
            android:id="@+id/nextpart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_13sdp"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:text="درس بعدی برای شما فعال شد" />

    </android.support.v7.widget.CardView>

    <com.javad.quizapplang.CustomView.NumTextViewBold
        android:id="@+id/btn_go_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="صفحه اصلی"
        android:gravity="center"
        android:background="@drawable/shape_btn2"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_15sdp"/>

</LinearLayout>
