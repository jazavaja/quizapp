<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.javad.quizapplang.CustomView.NumTextView
                    android:id="@+id/head16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="عبارت زیر را به فارسی بنویس"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_gravity="right"/>

                <LinearLayout
                    android:gravity="left"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    >

                    <FrameLayout
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="#0665b3"/>

                        <ImageView
                            android:id="@+id/btn_voice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_volume_up"
                            android:padding="@dimen/_6sdp"/>

                    </FrameLayout>

                    <com.javad.quizapplang.CustomView.NumTextView
                        android:id="@+id/txt_body16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_gravity="center"/>

                    <com.nex3z.flowlayout.FlowLayout
                        android:id="@+id/flow_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_15sdp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        app:flRowSpacing="@dimen/_10sdp"
                        app:flChildSpacing="@dimen/_10sdp"
                        app:flChildSpacingForLastRow="align"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bubble">

                    <com.javad.quizapplang.CustomView.NumTextViewBold
                        android:id="@+id/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:text="زیرنویس"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textSize="@dimen/_11sdp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_10sdp"/>

                </FrameLayout>

            </LinearLayout>

        <!--</android.support.v7.widget.CardView>-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center|top"
            android:background="@drawable/shape">

            <com.javad.quizapplang.CustomView.MyEditText
                android:id="@+id/et_answer16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top|right"
                android:background="@null"
                android:layout_margin="@dimen/_10sdp"
                android:layout_gravity="center"
                android:hint="به فارسی بنویس"
                android:textSize="@dimen/_12sdp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="#e1e0e0"
            android:layout_marginTop="@dimen/_40sdp">

            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/balayi"
                android:layout_width="match_parent"
                android:background="#00ffffff"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="match_parent"
                app:flChildSpacing="@dimen/_10sdp"
                app:flRowSpacing="@dimen/_10sdp"
                app:flChildSpacingForLastRow="align"/>

        </FrameLayout>

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/llMain"
            android:layout_width="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            app:flRowSpacing="@dimen/_10sdp"
            app:flChildSpacing="@dimen/_10sdp"
            app:flChildSpacingForLastRow="align"/>

        </LinearLayout>
</RelativeLayout>
