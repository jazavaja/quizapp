<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardElevation="@dimen/_5sdp"-->
        <!--android:layout_margin="@dimen/_5sdp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.javad.quizapplang.CustomView.NumTextView
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="گزینه درست را انتخاب کن"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_gravity="right"/>

            <com.javad.quizapplang.CustomView.NumTextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="صبح بخیر"
                android:gravity="center"
                android:visibility="gone"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center"/>


            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/flow_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:gravity="center"
                android:layout_gravity="center"
                app:flRowSpacing="@dimen/_10sdp"
                app:flChildSpacing="@dimen/_10sdp"
                app:flChildSpacingForLastRow="align"/>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/bubble">

                <com.javad.quizapplang.CustomView.NumTextViewBold
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:text="زیرنویس"
                    android:gravity="center"
                    android:textSize="@dimen/_11sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"/>

            </FrameLayout>

        </LinearLayout>

        <!--</android.support.v7.widget.CardView>-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_opts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_20sdp">

            <RadioButton
                android:id="@+id/rb_opts1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="good morning"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:gravity="center"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/shape"
                android:layout_gravity="center"/>

            <RadioButton
                android:id="@+id/rb_opts2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="good morning"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:gravity="center"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/shape"
                android:layout_gravity="center"/>

            <RadioButton
                android:id="@+id/rb_opts3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="good morning"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/shape"
                android:layout_gravity="center"/>

            <RadioButton
                android:id="@+id/rb_opts4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="good morning"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:gravity="center"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/shape"
                android:layout_gravity="center"/>

        </RadioGroup>


        <FrameLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="#e1e0e0"
            android:layout_marginTop="@dimen/_40sdp">

            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/balayi"
                android:layout_width="match_parent"
                android:background="#00ffffff"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="match_parent"
                app:flChildSpacing="@dimen/_10sdp"
                app:flRowSpacing="@dimen/_10sdp"
                app:flChildSpacingForLastRow="align"/>

        </FrameLayout>

        <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/llMain"
        android:layout_width="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        app:flRowSpacing="@dimen/_10sdp"
        app:flChildSpacing="@dimen/_10sdp"
        app:flChildSpacingForLastRow="align"/>
    </LinearLayout>
</RelativeLayout>