<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardElevation="5dp"-->
        <!--android:layout_margin="5dp">-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.javad.quizapplang.CustomView.NumTextView
                android:id="@+id/txt_head6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="به مکالمه زیر گوش داده و تصویر مناسب را انتخاب کنید"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_gravity="right"/>

            <com.javad.quizapplang.CustomView.NumTextViewBold
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center"
                android:text="title"
                android:layout_marginTop="@dimen/_25sdp"
                android:textColor="@color/color_header_footer"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_type6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bubble"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <com.javad.quizapplang.CustomView.NumTextViewBold
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:text="زیرنویس"
                    android:gravity="center"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"/>

            </FrameLayout>


            <GridView
                android:id="@+id/grid_type6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="auto_fit"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

    </ScrollView>
    <!--</android.support.v7.widget.CardView>-->

</RelativeLayout>