<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardElevation="5dp"-->
        <!--android:layout_margin="5dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.javad.quizapplang.CustomView.NumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="کلمه ای را که شنیدی انتخاب کن"
                android:gravity="right"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorBlack"
                android:layout_margin="@dimen/_10sdp"
                android:layout_gravity="right"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_gravity="center">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#0665b3"/>

                    <ImageView
                        android:id="@+id/btn_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_volume_up"
                        android:padding="6dp"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginLeft="50dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#0665b3"/>

                    <ImageView
                        android:id="@+id/btn_voice_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/turtle"
                        android:tint="@color/colorWhite"
                        android:padding="9dp"/>

                </FrameLayout>

            </LinearLayout>

            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/flow_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:gravity="center"
                android:layout_gravity="center"
                app:flRowSpacing="@dimen/_10sdp"
                android:visibility="gone"
                app:flChildSpacing="@dimen/_10sdp"
                app:flChildSpacingForLastRow="align"/>


        </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->

    <FrameLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:background="#e1e0e0"
        >

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/balayi"
            android:layout_width="match_parent"
            android:background="#00ffffff"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="match_parent"
            app:flChildSpacing="@dimen/_10sdp"
            app:flRowSpacing="@dimen/_10sdp"
            app:flChildSpacingForLastRow="align"/>

    </FrameLayout>

    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/llMain"
        android:layout_weight="0.5"
        android:layout_width="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        app:flRowSpacing="@dimen/_10sdp"
        app:flChildSpacing="@dimen/_10sdp"
        app:flChildSpacingForLastRow="align"/>


</LinearLayout>